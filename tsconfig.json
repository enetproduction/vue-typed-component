{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "noImplicitAny": false,
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
